@@ -0,0 +1,30 @@
+:root{ --ol-gap:12px; --ol-radius:12px; --ol-border:#ececec; --ol-text:#222; --ol-muted:#666; --ol-cta:#FF6B35;}
+.ol-card{background:#fff;border:1px solid var(--ol-border);border-radius:16px;padding:20px;}
+.ol-card__title{font-weight:700;font-size:18px;margin-bottom:16px;}
+.ol-grid{display:grid;gap:var(--ol-gap);}
+.ol-grid--4{grid-template-columns:repeat(4,1fr);}
+.ol-grid--6{grid-template-columns:repeat(6,1fr);}
+.ol-input,.ol-select,.ol-textarea{width:100%;padding:10px 12px;border:1px solid var(--ol-border);border-radius:var(--ol-radius);font:14px/1.2 system-ui;}
+.ol-textarea{min-height:96px;resize:vertical;}
+.ol-btn{padding:10px 14px;border-radius:12px;border:1px solid var(--ol-border);background:#fafafa;font-weight:600;cursor:pointer}
+.ol-btn--ghost{background:#fff}
+.ol-btn--danger{background:#FFEBEA;border-color:#FFC7C3;color:#B42318}
+.ol-cta{display:inline-block;background:var(--ol-cta);color:#fff;border:none;border-radius:20px;padding:12px 20px;font-weight:700}
+.ol-table{width:100%;border-collapse:collapse;border:1px solid var(--ol-border)}
+.ol-table th,.ol-table td{padding:10px;border-top:1px solid var(--ol-border);text-align:left}
+.ol-flex{display:flex}.gap-2{gap:8px}.items-center{align-items:center}.ml-auto{margin-left:auto}.w-24{width:92px}.w-32{width:128px}.w-48{width:192px}.flex-1{flex:1}.mt-2{margin-top:8px}.mt-3{margin-top:12px}.mt-4{margin-top:16px}
+.ol-summary{display:grid;grid-template-columns:repeat(4,1fr);gap:8px}
+.ol-summary__total{grid-column:span 4;display:flex;justify-content:space-between;border-top:1px dashed var(--ol-border);padding-top:8px;margin-top:4px}
+.ol-radio-group{display:flex;gap:16px}
+/* kill-switch para qualquer resquício do botão Baixar Layout */
+.btn-download-layout,[data-action="download-layout"]{display:none !important}
