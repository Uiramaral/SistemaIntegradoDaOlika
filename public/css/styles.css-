/* ============ TOKENS ============ */
:root{
  --bg:#fafafa; --panel:#fff; --line:#ececec;
  --text:#1f2937; --muted:#6b7280;
  --brand:#ff7a18; /* laranja mais vivo */
  --radius:18px; --shadow:0 10px 20px rgba(0,0,0,.04);
  --gap:16px; --pad:16px; --pad-lg:20px;
}

/* Bloquear scroll quando menu mobile aberto */
.no-scroll { overflow: hidden; }

/* Backdrop do drawer */
.backdrop{
  position:fixed; inset:0; background:rgba(0,0,0,.22);
  z-index:30; display:none; /* fallback JS controla display */
}

/* Alpine: esconder elementos com x-cloak até inicializar */
[x-cloak] { display: none !important; }

/* ============ BASE ============ */
.ui{ background:var(--bg); color:var(--text); font: 14px/1.4 Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; }
a{ color:inherit; text-decoration:none; }

/* ============ LAYOUT ============ */
/* Layout antigo - mantido para compatibilidade */
.layout{ display:grid; grid-template-columns: 260px 1fr; min-height:100dvh; }
.sidebar{ background:#fff; border-right:1px solid var(--line); padding:16px; position:sticky; top:0; height:100dvh; overflow:auto; }
.main{ display:flex; flex-direction:column; min-width:0; }
/* Layout novo - Lovable responsive */
.dashboard-wrapper{ display:flex; min-height:100vh; width:100%; overflow-x:hidden; }
.dashboard-sidebar{ flex:0 0 240px; background:#fff; border-right:1px solid #eee; height:100vh; position:sticky; top:0; overflow-y:auto; transition:transform .3s ease; padding:16px; z-index:1000; }
.dashboard-content{ flex:1 1 auto; min-width:0; background:#fafafa; padding:24px; }

.topbar{
  display:flex; align-items:center; gap:16px;
  padding: 12px var(--pad-lg); background:#fff; border-bottom:1px solid var(--line);
  position:sticky; top:0; z-index:10;
}
.hamb{ display:none; font-size:20px; background:#fff; border:1px solid var(--line); border-radius:10px; padding:6px 10px; }
.titles h1{ font-size:20px; font-weight:700; margin:0; }
.titles .sub{ margin:2px 0 0; color:var(--muted); font-size:13px; }
.actions{ margin-left:auto; display:flex; gap:10px; }

.page{ padding: var(--pad-lg); }

/* ============ BRAND / MENU ============ */
.brand{ display:flex; gap:10px; align-items:center; margin-bottom:12px; }
.logo-square{ width:26px; height:26px; border-radius:8px; background:linear-gradient(135deg,#ffb86b,#ff7a18); display:inline-block; }
.brand-title{ font-weight:800; letter-spacing:.3px; }
.brand-sub{ color:var(--muted); font-size:12px; margin-top:-2px; }

.menu{ display:flex; flex-direction:column; gap:2px; margin-top:8px; }
.mi{ display:flex; align-items:center; gap:10px; padding:10px 12px; border-radius:10px; color:#374151; }
.mi:hover{ background:#f6f6f6; }
.mi.active{ background:#fff7ed; color:#9a3412; border:1px solid #ffe4d5; }
.mi.disabled{ opacity:.45; pointer-events:none; }
.mi-ico{ width:18px; text-align:center; }

/* ============ CARDS / GRID ============ */
.grid-2{
  display:grid; grid-template-columns: 1fr 1fr; gap: var(--gap);
}
.card{
  background:var(--panel); border:1px solid var(--line);
  border-radius: var(--radius); box-shadow: var(--shadow);
  padding: var(--pad-lg);
}
.span-2{ grid-column: span 2; }
.card-title{ font-weight:700; margin:0 0 2px; font-size:16px; }
.card-sub{ color:var(--muted); margin:0 0 14px; font-size:13px; }
.titles .sub, .card-sub{ font-size:13px; }

/* ============ STATUS LIST ============ */
.status-list{ display:flex; flex-direction:column; gap:10px; padding:0; margin:0; list-style:none; }
.status-item{
  display:grid; grid-template-columns: 20px 1fr auto; gap:10px;
  align-items:center; background:#fff; border:1px solid var(--line); border-radius:12px; padding:12px 14px;
}
.status-texts{ min-width:0; }
.status-name{ font-weight:600; }
.status-desc{ color:var(--muted); font-size:12px; }
.gear{ border:0; background:#fff; border:1px solid var(--line); padding:8px 10px; border-radius:10px; cursor:pointer; }
.dot{ width:12px; height:12px; border-radius:999px; display:inline-block; }
.dot-red{ background:#ef4444; } .dot-blue{ background:#3b82f6; }
.dot-orange{ background:#f59e0b; } .dot-purple{ background:#8b5cf6; }
.dot-green{ background:#22c55e; } .dot-gray{ background:#9ca3af; }

/* ============ FORM ============ */
.form{ display:flex; flex-direction:column; gap:10px; }
.lbl{ font-weight:600; font-size:13px; }
.inp{
  background:#fff; border:1px solid var(--line); border-radius:12px;
  padding:10px 12px; width:100%; min-height:38px;
}
.inp, .status-item, .btn, .badge{ border-radius:12px; }
.hint{ color:var(--muted); font-size:12px; }
.color-row{ display:flex; gap:8px; }
.c{ width:28px; height:28px; border-radius:999px; border:2px solid #fff; outline:1px solid var(--line); cursor:pointer; }
.c-red{ background:#ef4444; } .c-orange{ background:#f97316; } .c-yellow{ background:#eab308; }
.c-green{ background:#22c55e; } .c-teal{ background:#14b8a6; } .c-blue{ background:#3b82f6; } .c-purple{ background:#8b5cf6; }

/* ============ BUTTONS ============ */
.btn{
  border-radius:12px; padding:10px 14px; border:1px solid var(--line);
  background:#fff; cursor:pointer; font-weight:600;
}
.btn.ghost{ background:#fff; }
.btn.primary{ background: linear-gradient(180deg,#ff8b3f,#ff7a18); color:#fff; border-color:transparent; }
.btn.primary:hover{ filter:brightness(.95); }
.mi.active{ background:#fff7ed; color:#9a3412; border:1px solid #ffd7b3; }

/* ============ PREVIEW ============ */
.notif{ background:#fff; border:1px solid var(--line); border-radius:14px; padding:14px; }
.notif-line{ display:flex; align-items:center; gap:8px; margin-bottom:6px; }
.badge{ background:#fff7ed; color:#9a3412; border:1px solid #ffedd5; border-radius:999px; padding:4px 8px; font-size:12px; font-weight:700; }
.notif-title{ font-weight:700; margin-bottom:4px; }
.notif-text{ color:#374151; }
.notif-time{ color:var(--muted); font-size:12px; margin-top:6px; }

/* ============ RESPONSIVO ============ */
@media (max-width: 1024px){
  .grid-2{ grid-template-columns: 1fr; }
  .span-2{ grid-column: auto; }
  .actions{ display:none; }
}

@media (max-width: 900px){
  .layout{ grid-template-columns: 1fr; }
  .sidebar{
    position:fixed; inset:0 auto 0 0; width:260px; transform: translateX(-100%);
    transition: transform .2s ease; z-index:40; box-shadow: 20px 0 40px rgba(0,0,0,.08);
  }
  .sidebar.open{ transform: translateX(0); }
  .topbar{ gap:10px; }
  /* Força o hambúrguer a aparecer, caso alguma regra esconda */
  .topbar .hamb{ display:inline-flex !important; align-items:center; justify-content:center; width:40px; height:36px; }
  
  /* Dashboard wrapper responsivo */
  .dashboard-wrapper{ grid-template-columns: 1fr; }
}

/* ===== TOKENS ===== */
:root{
  --bg:#fafafa; --panel:#fff; --line:#ececec;
  --text:#1f2937; --muted:#6b7280;
  --brand:#ff7a18; --brand-2:#ff8b3f;
  --radius-xl:18px; --radius-lg:14px; --radius:12px;
  --shadow:0 10px 30px rgba(0,0,0,.06);
}

/* ===== BASE ===== */
.page{ padding:20px; }
h1.page-title{ font-size:28px; font-weight:800; margin:0 0 4px; }
p.page-sub{ color:var(--muted); margin:0 0 16px; }

/* ===== TOOLBAR (título + ações à direita) ===== */
.toolbar{ display:flex; align-items:center; gap:16px; margin-bottom:16px; }
.toolbar .grow{ flex:1; min-width:0; }
.btn{ border-radius:12px; padding:10px 14px; border:1px solid var(--line); background:#fff; font-weight:700; cursor:pointer; }
.btn.primary{ background:linear-gradient(180deg,var(--brand-2),var(--brand)); color:#fff; border-color:transparent; }
.btn.ghost{ background:#fff; }

/* ===== CARD ===== */
.card{
  background:var(--panel); border:1px solid var(--line);
  border-radius:var(--radius-xl); box-shadow:var(--shadow);
  padding:18px;
}
.card .card-title{ font-size:18px; font-weight:800; margin:0 0 2px; }
.card .card-sub{ color:var(--muted); margin:0 0 14px; }

/* ===== FORM GRID ===== */
.form-section{ display:flex; flex-direction:column; gap:14px; }
.field-row{ display:grid; grid-template-columns: repeat(12, 1fr); gap:10px; }
.field{ display:flex; flex-direction:column; gap:6px; }
.field .lbl{ font-weight:700; font-size:13px; color:#111; }
.field .inp{ border:1px solid var(--line); border-radius:12px; min-height:42px; padding:10px 12px; background:#fff; }
.field .inp::placeholder{ color:#9ca3af; }

/* ===== INPUT COM ÍCONE (search) ===== */
.input-search{ position:relative; }
.input-search .icon{ position:absolute; left:10px; top:50%; transform:translateY(-50%); pointer-events:none; }
.input-search .inp{ padding-left:36px; }

/* ===== TABLE ===== */
.table{ width:100%; border-collapse:separate; border-spacing:0; }
.table thead th{
  text-align:left; font-weight:700; font-size:13px; color:#111;
  padding:12px 14px; border-bottom:1px solid var(--line);
}
.table tbody td{ padding:12px 14px; border-bottom:1px solid #f1f1f1; vertical-align:middle; }
.table .cell-right{ text-align:right; }
.table .muted{ color:var(--muted); font-size:12px; }

/* avatar inicial */
.avatar{ width:34px; height:34px; border-radius:999px; background:#ffe9dc; color:#bf4c00; display:flex; align-items:center; justify-content:center; font-weight:800; }

/* ===== BADGES ===== */
.badge{ display:inline-flex; align-items:center; gap:6px; border-radius:999px; padding:4px 10px; font-weight:800; font-size:12px; }
.badge.green{ background:#eaf8ef; color:#0b7a3c; border:1px solid #caefd7; }
.badge.orange{ background:#fff4e8; color:#b65300; border:1px solid #ffd9b7; }
.badge.gray{ background:#f5f5f5; color:#616161; border:1px solid #e5e5e5; }

/* ===== LINKS DE AÇÃO ===== */
.link{ font-weight:800; }
.pill{ display:inline-flex; align-items:center; gap:6px; border:1px solid var(--line); padding:8px 12px; border-radius:12px; background:#fff; }

/* ===== SIDEBAR ACTIVE ===== */
.mi.active{ background:#fff7ed; color:#9a3412; border:1px solid #ffd9b7; }
.mi.disabled{ opacity:.45; pointer-events:none; }

/* ===== RESPONSIVO (adicional) ===== */
@media (max-width: 1024px){
  .toolbar .actions{ display:none; }
}

@media (max-width: 900px){
  .field-row{ grid-template-columns: 1fr 1fr; }
}

@media (max-width: 640px){
  .field-row{ grid-template-columns: 1fr; }
}

