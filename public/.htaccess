<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%1]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=302]

    # CRÍTICO: Prevenir execução direta de QUALQUER arquivo PHP (exceto index.php)
    # Isso garante que TODOS os arquivos PHP sejam processados pelo Laravel
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_FILENAME} \.php$
    RewriteCond %{REQUEST_FILENAME} !index\.php$
    RewriteRule ^.*$ index.php [L]

    # Prevenir acesso direto a diretórios específicos que podem ter arquivos PHP
    # Redirecionar tudo em /api/ para o Laravel processar
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^.*$ index.php [L]

    # Send Requests To Front Controller...
    # Todas as requisições que não forem arquivos ou diretórios reais
    # serão redirecionadas para index.php (Laravel)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
